<header class="masthead"> {#mb-auto#}
    <div class="inner">
        <h3 class="masthead-brand">
                        <span class="user-info">
                            <small>Welcome,</small>{{ app.user.username| default('Guest') }}
                        </span>

        </h3>
        <nav class="nav nav-masthead justify-content-center">
            <a class="nav-link active" href="{{ path('home_index') }}">Home</a>
            {% if app.user is not null %}
                <a class="nav-link" href="#">
                    Settings
                </a>
                <a class="nav-link" href="{{path('user_show', { 'id': app.user.id })}}">
                    <i class="ace-icon fa fa-user"></i>
                    Profile
                </a>
                <a class="nav-link" href="{{ path('logout') }}" target="">
                    Logout
                </a>
            {% else %}
                <a class="nav-link"  href="{{ path('login') }}" target="">
                    Login
                </a>
            {% endif %}
        </nav>
    </div>
</header>